<div class="data-form">
    <form class="form-signin" action="<%=`/users/${user._id}/update?_method=PUT` %>" method="POST">
        <h2 class="form-signin-heading">Edit user:</h2>

        <label for="inputFirst">First</label>
        <input type="text" name="first" id="inputFirst" class="form-control" value="<%= user.name.first %>" placeholder="First" autofocus>

        <label for="inputPassword">Last</label>
        <input type="text" name="last" id="inputLast" class="form-control" value="<%= user.name.last %>" placeholder="Last" autofocus>

        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" value="<%= user.password %>" placeholder="Password" autofocus>

        <label for="inputEmail">Email address</label>
        <input type="email" name="email" id="inputEmail" class="form-control" value="<%= user.email %>" placeholder="Email address" required>

        <label for="inputZipCode">Zip Code</label>
        <input type="text" name="zipCode" id="inputZipCode" class="form-control" pattern="[0-9]{5}" value="<%= user.zipCode %>" placeholder="Zip Code" required>

        <br>
        <button class="button" type="submit">Save</button>
    </form>
</div>
